{
    "compilerOptions": {
        "downlevelIteration": true,
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2017",
            "es2015.collection",
            "es2015.iterable",
            "es2015.generator"
        ],
        "baseUrl": "../ui/src"
    },
    "include": ["../ui/src/**/*"],
    "exclude": ["node_modules", "dist"]
}
